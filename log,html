<body>
  <h2>ðŸ’Œ Siya's Message Log</h2>
  <table id="logTable">
    <thead>
      <tr><th>Timestamp</th><th>Mood</th><th>Message</th></tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    const SHEET_ID = "https://docs.google.com/spreadsheets/d/1fEasJiY5EVtNEP8MkkOrr-BlhzFl0s3EoJ9hZruE1Is/edit?usp=sharing"; // Replace this with your actual Google Sheet ID
    const API_URL = `https://opensheet.elk.sh/${SHEET_ID}/Sheet1`;

    fetch(API_URL)
      .then(res => res.json())
      .then(data => {
        const table = document.querySelector("#logTable tbody");
        data.forEach(row => {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td>${row.Timestamp}</td><td>${row.Mood}</td><td>${row.Message}</td>`;
          table.appendChild(tr);
        });
      });
  </script>
</body>
